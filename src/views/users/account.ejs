
  
  <h1>Hi <%=data.login %>!</h1>
  <h4>This is your own little space. Here you can create, read, uppdate and delete your own snippet. Have fun!</h4>
  
  <div class="account-startpage">
      <div class="create-snippet-wrapper">
  <form method="post" action="./account">
    <p class="snippet-title">Snippet title</p>
        <input type="text" id="inputName" name="name" placeholder="Snippet title" required="required" autofocus="autofocus" />
    <p>Snippet code</p>
        <textarea id="usersnippet" name="usersnippet" rows="4" cols="50" required ="required"></textarea>
    <p>Author</p>
         <input type="text" id="input-author-name" name="authorname" value="<%=data.login%>" required="required" autofocus="autofocus" /><br>
       <button type="submit" class="savebutton">Save</button><br>
    </form> 
  </div>
       <div class="usersnippet-wrapper">
  <thead>
    <tr>
      <th>Your Snippets</th>
    </tr>
  </thead>
  <table>
    <% if (snippet?.length > 0) { %>
      <% snippet.forEach(obj => { %>
        <tr>
          <th><%= obj.title %></th>
          <td><%=obj.body%></a></td> <td><a class="edit" href="account/<%=obj.id %>/update">Update</a></td><td><button type="submit" name="id" value="<%=obj.id %>" class="delete-btn">delete</button></td>
        </a>
        </tr>
      <% }) %>
    <% } else { %>
      <tr colspan="2">
        <td class="text-center">No snippets to display.</td>
      </tr>
      <% } %>
</table>
</div>
</div>
